<%= provide :title, t("admin.books.new.title") %>
<div id="books">
  <div class="row">
    <div class="col-lg-offset-1 col-lg-10 padding-top-50">
      <div class="col-lg-12">
        <h1 class="text-center title-function">
          <%= t "admin.books.new.title" %>
        </h1>
      </div>
      <%= form_for(@book, html: {multipart: true},
        url: admin_books_path) do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <div class="col-lg-12 padding-0 margin-top-100">
          <div class="col-lg-3">
            <%= f.label :category_id, t("admin.books.new.categories") %>
            <%= f.select(:category_id,
              options_from_collection_for_select(@categories, :id, :name),
              {}, class: "form-control") %>
          </div>
          <div class="col-lg-3">
            <%= f.label :author_id, t("admin.books.new.authors") %>
            <%= f.select(:author_id,
              options_from_collection_for_select(@authors, :id, :name),
              {}, class: "form-control") %>
          </div>
          <div class="col-lg-3">
            <%= f.label :language_id, t("admin.books.new.languages") %>
            <%= f.select(:language_id,
              options_from_collection_for_select(@languages, :id, :name), {},
              class: "form-control") %>
          </div>
          <div class="col-lg-3">
            <%= f.label :publisher_id, t("admin.books.new.publishers") %>
            <%= f.select(:publisher_id,
              options_from_collection_for_select(@publishers, :id, :name),
              {}, class: "form-control") %>
          </div>
        </div>
        <div class="col-lg-12 padding-0 padding-top-20">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="col-lg-12 padding-0 padding-top-20">
          <div class="col-lg-6">
            <%= f.label :number_of_pages %>
            <%= f.text_field :number_of_pages, class: "form-control" %>
          </div>
          <div class="col-lg-6">
            <%= f.label :cover_image_name %>
            <%= f.file_field :cover_image_name,
              accept: "image/jpeg, image/gif, image/png, image/jpg" %>
          </div>
        </div>
        <div class="col-lg-12 padding-0 padding-top-20">
          <%= f.label :description %>
          <%= f.text_area :description, rows: 10, class: "form-control" %>
        </div>
        <div class="col-lg-12 padding-0 padding-top-20">
          <div class="col-lg-6">
            <%= f.label :price %>
            <%= f.text_field :price, class: "form-control" %>
          </div>
          <div class="col-lg-6">
            <%= f.label :publish_date %>
            <div class="input-group date form_date col-lg-12">
               <%= f.text_field :publish_date, class: "form-control" %>
               <span class="input-group-addon">
                 <span class="glyphicon glyphicon-calendar"></span>
               </span>
            </div>
          </div>
        </div>
        <div class="col-lg-12 padding-0 padding-top-20">
          <%= f.label :is_in_library %>
          <%= f.check_box :is_in_library, class: "" %>
        </div>
        <div class="col-lg-12 padding-0 padding-top-20 text-center">
          <%= f.submit "Submit", class: "btn btn-primary padding-20 box-shadow" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

