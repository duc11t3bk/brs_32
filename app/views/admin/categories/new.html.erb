<%= provide :title, t("admin.categories.new.title") %>
<div id="books">
  <div class="row padding-top-50">
    <div class="col-lg-12">
      <h1 class="text-center title-function">
        <%= t "admin.categories.new.title" %>
      </h1>
    </div>
    <div class="col-lg-12">
      <div class="col-lg-offset-2 col-lg-8">
        <%= form_for @category, url: admin_categories_path do |f| %>
          <%= render "shared/error_messages", object: f.object %>
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
          <div class="col-lg-12 text-center padding-top-20">
            <%= f.submit t("admin.categories.new.submit"),
            class: "btn btn-default" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
