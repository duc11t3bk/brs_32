<%= form_for(user_book.comments.build, html: {multipart: true}) do |f| %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("comment.write_comment") %>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :user_book_id, value: user_book.id %>
  <%= f.submit t "comment.bt_comment", class: "btn btn-primary" %>
<% end %>
