<div class="div-search">
  <div class="row">
    <div class="col-lg-12">
    <div class="col-lg-offset-2 col-lg-8">
        <input type="text" class="form-control">
      </div>
      <div class="col-lg-1 padding-0">
        <button class="btn btn-default pull-right max-width">
          <span class="glyphicon glyphicon-search"></span>
            <%= t "books.index.btn_search" %>
        </button>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <%= render "filter_book" %>
    </div>
    <div class="col-lg-10 padding-top-20">
      <div class="col-lg-12 main-content">
        <% @books.in_groups_of(Settings.books_per_row, false).each do
          |book_groups| %>
          <div class="col-lg-12">
            <% book_groups.each do |book| %>
            <div class="col-lg-3">
              <div class="col-lg-12 book-item">
                <%= link_to book do %>
                  <%= image_tag("#{book.cover_image_name}", class: "book-item-img") %>
                <% end %>
                <div class="col-lg-12 padding-2">
                  <ul class="book-item-list">
                    <li><i class="glyphicon glyphicon-heart"></i></li>
                    <li><i class="glyphicon glyphicon-eye-open"></i></li>
                    <li><i class="glyphicon glyphicon-check"></i></li>
                  </ul>
                </div>
                <div class="col-lg-12 padding-2">
                  <h5 class="margin-0 book-item-title">
                    <%= link_to book.title, book %>
                  </h5>
                </div>
                <div class="col-lg-12 padding-2">
                  <span class="book-item-price">
                    <%= book.price %> d
                  </span>
                </div>
                <div class="col-lg-12 padding-2">
                  <input type="number" class="rating-loading star-rating" value=<%= book.average_rating %> >
                </div>
              </div>
            </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <%= will_paginate %>
  </div>
</div>
