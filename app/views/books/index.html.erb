<div id="books">
  <div class="div-search">
    <div class="row">
      <div class="col-lg-12">
        <%= search_form_for @search do |f| %>
          <div class="col-lg-offset-2 col-lg-8">
            <%= f.search_field :title_or_category_name_or_author_name_or_publisher_name_or_language_name_cont,
              class: "form-control" %>
          </div>
          <div class="col-lg-2 padding-0">
            <%= f.button type: "submit",
              class: "btn btn-default pull-right max-width" do %>
              <span class="glyphicon glyphicon-search">
                <%= t "books.index.btn_search" %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-2">
        <%= render "filter_book" %>
      </div>
      <div class="col-lg-10 padding-top-20">
        <div class="col-lg-12 main-content">
          <% @books.in_groups_of(Settings.books_per_row, false).each do
            |book_groups| %>
            <div class="col-lg-12">
              <% book_groups.each do |book| %>
              <div class="col-lg-3">
                <div class="col-lg-12 book-item">
                  <%= link_to book do %>
                    <%= image_tag("#{book.cover_image_name.url}",
                      class: "book-item-img") %>
                  <% end %>
                  <div class="col-lg-12 padding-2">
                    <ul class="book-item-list">
                      <li <%= "class=favorited" if book
                        .is_favorite_of_user? current_user %>>
                        <i class="glyphicon glyphicon-heart btn_favorite"
                          href="<%= user_books_path %>"
                          data-user-id="<%= current_user.id %>"
                          data-book-id="<%= book.id %>"
                          data-is-favorite="<%= book
                            .is_favorite_of_user? current_user %>"></i>
                      </li>
                      <li <%= "class=reading" if book
                        .is_reading_of_user? current_user %>>
                        <i class="glyphicon glyphicon-eye-open btn_reading"
                          href="<%= user_books_path %>"
                          data-user-id="<%= current_user.id %>"
                          data-book-id="<%= book.id %>"
                          data-next-status="<%=
                            book.next_status_of_user current_user,
                              Settings.user_book_status.reading %>"></i>
                      </li>
                      <li <%= "class=read" if book
                        .is_read_of_user? current_user %>>
                        <i class="glyphicon glyphicon-check btn_read"
                          href="<%= user_books_path %>"
                          data-user-id="<%= current_user.id %>"
                          data-book-id="<%= book.id %>"
                          data-next-status="<%=
                            book.next_status_of_user current_user,
                              Settings.user_book_status.read %>"></i>
                      </li>
                    </ul>
                  </div>
                  <div class="col-lg-12 padding-2">
                    <h5 class="margin-0 book-item-title">
                      <%= link_to book.title, book %>
                    </h5>
                  </div>
                  <div class="col-lg-12 padding-2">
                    <span class="book-item-price">
                      <%= book.price %> d
                    </span>
                  </div>
                  <div class="col-lg-12 padding-2">
                    <input type="number" class="rating-loading star-rating"
                      value=<%= book.average_rating %> >
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="col-lg-12 text-center">
          <%= paginate @books, theme: "twitter-bootstrap-3" %>
        </div>
      </div>
    </div>
  </div>
</div>
