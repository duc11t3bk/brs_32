<header>
  <div id="logo">
    <%= link_to root_path do %>
      <h1><%= t "title_short" %></h1>
    <% end %>
  </div>
  <% if user_signed_in? %>
    <div id="menu">
      <ul>
        <li>
          <%= link_to (t "devise.header.users"), users_path %>
        </li>
        <li>
          <% if current_user.is_admin? %>
            <%= link_to (t "devise.header.books"), admin_books_path %>
          <% else %>
            <%= link_to (t "devise.header.books"), books_path %>
          <% end %>
        </li>
        <li class="arrow_down">
          <% if current_user.is_admin? %>
            <%= link_to (t "admin.books.new.categories"), admin_categories_path %>
          <% end %>
        </li>
        <li>
          <% if current_user.is_admin? %>
            <%= link_to (t "admin.books.new.authors"), admin_authors_path %>
          <% end %>
        </li>
        <li>
          <% if current_user.is_admin? %>
            <%= link_to (t "admin.books.new.publishers"), admin_publishers_path %>
          <% end %>
        </li>
        <li>
          <% if current_user.is_admin? %>
            <%= link_to (t "admin.books.new.languages"), admin_languages_path %>
          <% end %>
        </li>
      </ul>
    </div>
  <% end %>
  <div id="login_wrapper">
    <% if user_signed_in? %>
        <div class="user_name_wrapper">
          <a href="#" class="dropdown-toggle signin_signup"
            data-toggle="dropdown">
            <%= current_user.name %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li>
              <%= link_to (t "devise.header.profile"),
                edit_user_registration_path %>
            </li>
            <li>
              <%= link_to (t "devise.header.profile"),
                edit_user_registration_path %>
            </li>
            <li role="separator" class="divider"></li>
            <li>
              <%= link_to (t "devise.header.sign_out"),
                destroy_user_session_path,
                method: :delete %>
            </li>
          </ul>
        </div>
    <% else %>
      <%= link_to (t "devise.header.sign_in"),
        new_user_session_path,
        class: "signin_signup" %>
      <%= link_to (t "devise.header.sign_up"),
        new_user_registration_path,
        class: "signin_signup" %>
    <% end %>
  </div>
</header>

<div class="bg_bottom"></div>
